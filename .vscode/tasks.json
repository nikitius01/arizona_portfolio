{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-release",
      "type": "shell",
      "command": "${workspaceRoot}/compiler/pawncc.exe",
      "args": [
        "'${fileBasename}'",
        "'-D${fileDirname}'",
        "'-;+'",
        "'-(+'",
        "'-O2'",
		    "'-d3'",
        "'-C'",
        "'-v2'"
      ],
      "group": {
        "kind": "build"
      },
      "isBackground": false,
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      },
      "problemMatcher": "$pawncc"
    },
    {
      "label": "build-debug",
      "type": "shell",
      "command": "${workspaceRoot}/compiler/pawncc.exe",
      "args": [
        "'${fileBasename}'",
        "'-D${fileDirname}'",
        "'-;+'",
        "'-(+'",
		    "'-d3'",
        "'-C'",
        "'-v2'",
		    "DEBUG_MODE="
      ],
      "group": {
        "kind": "build"
      },
      "isBackground": false,
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated"
      },
      "problemMatcher": "$pawncc"
    }
  ]
}